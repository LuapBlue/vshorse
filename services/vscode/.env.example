# Code-Server Configuration
CODE_SERVER_PASSWORD=your_password_here
CODE_SERVER_SUDO_PASSWORD=your_sudo_password_here
CODE_SERVER_DOMAIN=localhost

# VS Code Extensions to install (comma-separated)
# Example: ms-python.python,ms-azuretools.vscode-docker,esbenp.prettier-vscode
CODE_SERVER_EXTENSIONS=ms-azuretools.vscode-docker,esbenp.prettier-vscode,dbaeumer.vscode-eslint,eamodio.gitlens,ms-vscode.typescript-typescript-playground

# VS Code Settings (JSON format)
# Example: {"editor.fontSize": 14, "editor.wordWrap": "on"}
VSCODE_SETTINGS={"editor.fontSize": 14, "editor.wordWrap": "on", "terminal.integrated.fontSize": 14}

# User settings
USER_UID=1000
USER_GID=1000

# Timezone
TZ=UTC
